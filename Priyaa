 # include<stdio.h>  
 struct complex 
 {
  float real;
  float img;
  };
  struct complex add(struct complex a,struct complex b)
  {
  struct complex c;
   c.real=a.real+b.real;
   c.img=a.img+b.img;
   return c;
   } 
   int main()
   { 
   Struct complex a,b,c;
   printf("Enter the real value of a =");
   scanf("%f",&a.real);
   printf("Enter th img value of =");
   scanf("%f",&a.img);
   printf("Enter the real value of =");
   scanf(%f",&b.real);
   printf("Enter the img value of =");
   scanf("%f",&b.img);
   c=add(a,b);
   printf("sum of the two complex numbers=%f+i%f\n",c.real,c.imaginary")
   {
   return 0;
   }
